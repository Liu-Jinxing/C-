#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int i,n,a,b;
    char v=' ';
    scanf("%d",&n);
    for(i=1;i<=2*n+1;i++)
    {
        for(a=1;a<=abs(n+1-i);a++)
            printf("%c",v);
        for(b=1;b<=2*n+1-2*abs(n+1-i);b++)
            printf("*");
        printf("\n");
    }
    return 0;
}
